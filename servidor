#!/usr/bin/env python3
import asyncio
from grader.tcp import Servidor
from grader.preprocess import return_ping
import re

MAP_WORDS = {b'PING': return_ping}

SERVER_USERS = {}


def validar_nome(nome):
    return re.match(br'^[a-zA-Z][a-zA-Z0-9_-]*$', nome) is not None


def sair(conexao):
    print(conexao, 'conexão fechada')
    conexao.fechar()


def dados_recebidos(conexao, dados):
    if dados == b'':
        return sair(conexao)

    messagens = dados.split(b'\r\n')
    for message in messagens:
        tokens = message.split(b' ')
        mapped_word = tokens[0]
        return MAP_WORDS[mapped_word](conexao, tokens)


def conexao_aceita(conexao):
    print(conexao, 'nova conexão')
    conexao.registrar_recebedor(dados_recebidos)


servidor = Servidor(6667)
servidor.registrar_monitor_de_conexoes_aceitas(conexao_aceita)
asyncio.get_event_loop().run_forever()
